@code {

    private async Task ShowAlertAsync()
    {
        await JsRuntime.InvokeVoidAsync("showAlert", "Unkown user");
    }
    
    private void ShowAlert()
    {
        var jsInProcess = (IJSInProcessRuntime)JsRuntime;
        jsInProcess.InvokeVoid("showAlert", "Unkown user");
    }
}