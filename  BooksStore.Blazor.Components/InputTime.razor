@inherits Microsoft.AspNetCore.Components.Forms.InputBase<TimeOnly>

<input type="time" @bind-value="@CurrentValue" class="@CssClass"/>

@code {

    protected override bool TryParseValueFromString(string? value, out TimeOnly result, out string validationErrorMessage)
    {
        Console.WriteLine(value);
        if (string.IsNullOrWhiteSpace(value))
        {
            validationErrorMessage = "Geçersiz zaman değeri.";
            result = default;
            return false;
        }

        result = TimeOnly.Parse(value);
        validationErrorMessage = null;
        return true;
    }

}